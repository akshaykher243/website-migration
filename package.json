{
  "name": "website-migration",
  "version": "1.0.0",
  "description": "A blank template to get started with Payload 3.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "cross-env next build",
    "dev": "cross-env next dev",
    "devsafe": "rm -rf .next && cross-env next dev",
    "generate:importmap": "cross-env payload generate:importmap",
    "generate:types": "cross-env payload generate:types",
    "lint": "cross-env next lint",
    "lint:fix": "cross-env next lint --fix",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,json,css,md}'",
    "lint-staged": "lint-staged",
    "payload": "cross-env payload",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --config jest.unit.config.mjs",
    "test:integration": "bash scripts/start-test-db.sh && cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --config jest.integration.config.mjs --detectOpenHandles; EXIT_CODE=$?; bash scripts/stop-test-db.sh; exit $EXIT_CODE",
    "test:unit:watch": "npm run test:unit -- --watch",
    "test:integration:watch": "bash scripts/start-test-db.sh && cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --config jest.integration.config.mjs --watch --detectOpenHandles; bash scripts/stop-test-db.sh",
    "test:unit:coverage": "npm run test:unit -- --coverage",
    "test:integration:coverage": "bash scripts/start-test-db.sh && cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --config jest.integration.config.mjs --coverage --detectOpenHandles; EXIT_CODE=$?; bash scripts/stop-test-db.sh; exit $EXIT_CODE",
    "test:coverage": "npm run test:unit:coverage && npm run test:integration:coverage",
    "prepare": "husky"
  },
  "dependencies": {
    "@payloadcms/db-postgres": "^3.27.0",
    "@payloadcms/next": "^3.27.0",
    "@payloadcms/richtext-lexical": "^3.27.0",
    "@payloadcms/storage-s3": "^3.27.0",
    "cross-env": "^7.0.3",
    "graphql": "^16.8.1",
    "next": "15.1.5",
    "payload": "latest",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "sharp": "0.32.6"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.26.0",
    "@eslint/eslintrc": "^3.2.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.5.4",
    "@types/react": "19.0.7",
    "@types/react-dom": "19.0.3",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "babel-jest": "^29.7.0",
    "dotenv": "^16.4.7",
    "eslint": "^9.22.0",
    "eslint-config-next": "15.1.5",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.3",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.6",
    "typescript": "5.7.3"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0",
    "pnpm": "^9"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
